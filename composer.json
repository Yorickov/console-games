{
    "name": "yorickov/console-games",
    "description": "small console games",
    "bin": [
        "bin/game-even",
        "bin/game-prime",
        "bin/game-gcd",
        "bin/game-calc",
        "bin/game-progression",
        "bin/game-balance"
    ],
    "type": "project",
    "minimum-stability": "dev",
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
    },
    "autoload": {
        "files": [
            "src/flow.php",
            "src/utils.php",
            "src/games/even.php",
            "src/games/gcd.php",
            "src/games/prime.php",
            "src/games/calc.php",
            "src/games/progression.php",
            "src/games/balance.php"
        ]
    },  
    "require": {
        "wp-cli/php-cli-tools": "dev-master"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0@dev"
    }
}
