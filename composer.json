{
    "name": "yorickov/console-games",
    "description": "small console games",
    "bin": ["bin/game-even", "bin/game-prime", "bin/game-gcd", "bin/game-calc"],
    "type": "project",
    "minimum-stability": "dev",
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
    },
    "autoload": {
        "files": [
            "src/flow.php",
            "src/utils.php",
            "src/games/even.php",
